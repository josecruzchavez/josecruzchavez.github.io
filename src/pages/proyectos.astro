---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import miJson from './proyectos.json';
// Obteniendo solo los Ãºltimos 3 elementos
const proyectos = miJson;
---

<BaseLayout title="Proyectos" sideBarActiveItemID="projects">

  <div>
    <div class="text-3xl w-full font-bold mb-5">Proyectos</div>
  </div>

  {proyectos.map((item) => (
    <HorizontalCard
    title={item.code}
    img={item.img}
    desc={item.title}
    url={item.link}
    badge="Free"
    />
    <div class="divider my-0"></div>
  ))}

</BaseLayout>
